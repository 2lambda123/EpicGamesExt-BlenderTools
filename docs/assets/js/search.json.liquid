[
  {% for category in site.data.side-nav.categories %}
    {% for menu in category.menus %}
      {% if menu.url %}
        {
          "title" : "{{ menu.title | escape }}",
          "url" : "{{ site.url }}{{ menu.url }}",
          {% for page in site.pages %}
            {% if page.url == menu.url %}
              "content" : "{{ page.content | strip_html | strip_newlines | escape }}"
            {% break %}
            {% endif %}
          {% endfor %}
        }
      {% else %}
        {% for submenu in menu.submenus %}
        {
            "title" : "{{ submenu.title | escape }}",
            "url" : "{{ site.url }}{{ submenu.url }}",
            {% for page in site.pages %}
              {% if page.url == menu.url %}
                "content" : "{{ page.content | strip_html | strip_newlines | escape }}"
              {% break %}
              {% endif %}
            {% endfor %}

        }
        {% unless forloop.last %},{% endunless %}
        {% endfor %}

      {% endif %}
    {% unless forloop.last %},{% endunless %}
    {% endfor %}
  {% unless forloop.last %},{% endunless %}
  {% endfor %}
]